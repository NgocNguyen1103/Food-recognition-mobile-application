<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi nhấn vào (pressed) -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#BDBDBD" /> <!-- Màu xám đậm hơn khi nhấn -->
            <corners android:radius="16dp" /> <!-- Bo tròn các góc -->
        </shape>
    </item>

    <!-- Trạng thái bình thường (default) -->
    <item>
        <shape>
            <solid android:color="#E0E0E0" /> <!-- Màu xám nhạt khi không nhấn -->
            <corners android:radius="16dp" /> <!-- Bo tròn các góc -->
        </shape>
    </item>
</selector>
